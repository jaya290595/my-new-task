   <p>
     <strong>Title:</strong>
     <%= @movie.title %>
   </p>
    
   <p>
     <strong>Cast:</strong>
     <%= @movie.cast %>
   </p>

    
   <p>
     <strong>Genre:</strong>
     <%= @movie.genre %>
   </p>  
   <p>
     <strong>plot:</strong>
     <%= @movie.plot %>
   </p>  
   <p>
     <strong>year:</strong>
     <%= @movie.year%>
   </p>
    
   <p>
     <strong>rating:</strong>
     <%= @movie.rating %>
   </p>

   <p>
     <strong>images:</strong>
     <img src="<%= @movie.photo_url%>">
  </p>

  <h2>Comments</h2>
  <% @movie.comments.each do |comment| %>
    <p>
      <strong>Review:</strong>
      <%= comment.reviews %>
    </p>
    <p>
      <strong>submitted by:</strong>
      <%= comment.user.name%>
    </p>
    <%end%>

  <h2>Add a review:</h2>
  <%= form_for([@movie, @movie.comments.build]) do |f|%>
    <p>
      <%= f.label :review%><br>
      <%= f.text_field :reviews %>
    </p>
    <p>
        <%= f.submit %>
      </p>
          <%end%>
   <br>

   <%= link_to "Edit movie",edit_admin_movie_path(@movie) %><br>
   <%=link_to "Delete movie", admin_movie_path(@movie), method: :delete, data: {confirm: "Are you sure?"} %><br>
   <%= link_to "Add new movie",new_admin_movie_path(@movie) %><br>




